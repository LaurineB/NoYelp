extends ../layout

block content
    .container-fluid
        h1 Add a Comment
    .container-fluid
        .row
            .col-lg-6.col-lg-offset-3.col-xs-12.col-md-8.col-md-offset-2
                form(method="POST" action="/comments/create/"+ restaurantId + "").form
                    .form-group
                        label(for="title") title
                        input#title.form-control(type='text', name='title' value='#{comment.title}')
                    .form-group
                        label(for="comment") comment
                        input#comment.form-control(type='text', name='comment' value='#{comment.comment}')
                    .form-group
                        label(for="pseudo") pseudo
                        input#pseudo.form-control(type='text', name='pseudo' value='#{comment.pseudo}')
                    .form-group
                        label(for="rating") rating
                        input#rating.form-control(type='number', name='rating' value='#{comment.rating}')
                    input(type='text' name='restaurantId' value="#{restaurantId}" hidden=true)
                    .form-group
                        .btn-group-lg
                            a.btn.btn-default.btn-lg(href="javascript:history.back()") Back
                            button.btn.btn-success.btn-lg(type="submit") Add