
extends ../layout

block content
    .container-fluid
        h1 Add a Meal
    .container-fluid
        .row
            .col-lg-6.col-lg-offset-3.col-xs-12.col-md-8.col-md-offset-2
                form(method="POST" action="/meals/create/"+ restaurantId + "").form
                    .form-group
                        label(for="name") name
                        input#name.form-control(type='text', name='name')
                    .form-group
                        label(for="allergies") allergies
                        input#allergies.form-control(type='text', name='allergies')
                    .form-group
                        label(for="ingredients") ingredients
                        input#ingredients.form-control(type='text', name='ingredients')
                    .form-group
                        label Vegan
                        br
                        input(type='radio', name='vegan', value='true')
                        |  Oui
                        br
                        input(type='radio', name='vegan', value='false')
                        |  Non
                        br
                    .form-group
                        label Halal
                        br
                        input(type='radio', name='halal', value='true')
                        |  Oui
                        br
                        input(type='radio', name='halal', value='false')
                        |  Non
                        br
                    .form-group
                        label Kosher
                        br
                        input(type='radio', name='kosher', value='true')
                        |  Oui
                        br
                        input(type='radio', name='kosher', value='false')
                        |  Non
                        br

                    input(type='text' name='restaurantId' value="#{restaurantId}" hidden=true)
                    .form-group
                        .btn-group-lg
                            a.btn.btn-default.btn-lg(href="/restaurants") Back
                            button.btn.btn-success.btn-lg(type="submit") Add